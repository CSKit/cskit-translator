<div class="container">

  <div class="row">
    <div class="col-lg-10 col-lg-offset-1 col-md-4 col-md-offset-1">

      <div class="row">
        <div class="col-lg-4 col-md-4">
          <h3>English</h3>
        </div>
        <div class="col-lg-4 col-lg-offset-2 col-md-4 col-md-offset-2">
          <h3>Translation</h3>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-4 col-md-4">
          <p id="passage_text">
            "<%= @passage_with_text[0].key %>
            <span id="main_text"><%= @passage.key %></span>
            <%= @passage_with_text[2].key %>"
          </p>
        </div>

        <div class="col-lg-4 col-lg-offset-2 col-md-4 col-offset-2">
          <%= form_for [@passage, @new_translation] do |f| %>
            <div class="control-group">
              <%= f.label :translation, class: 'hidden' %>
              <%= f.text_area :translation %>
            </div>
            <br/>
            <div class="control-group">
              <%= f.submit 'Submit My Translation', class: 'btn btn-primary' %>
            </div>
          <% end %>

          <% @passage.translations.each do |translation| %>
            <p>=> <%= translation.translation %></p>
          <% end %>
        </div>

      </div>

      <div class="row">
        <div class="col-lg-6 col-lg-offset-2">
          <%= link_to phrase_path(params[:id].to_i - 1), class: 'btn btn-success pull-left' do %>
             <span class="glyphicon glyphicon-backward"></span> Previous
          <% end %>

          <%= link_to phrase_path(params[:id].to_i + 1), class: "btn btn-success pull-right" do %>
            Next <span class="glyphicon glyphicon-forward"></span>
          <% end %>
        </div>
      </div>

    </div>
  </div>

</div>